generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ========================
// Enums
// ========================
enum OwnerType {
  USER
  ORG
}

enum OwnerStatus {
  ACTIVE
  DEACTIVATED
}

enum OrgRole {
  OWNER
  ADMIN
  MEMBER
}

enum CollectionType {
  PROJECT
  EVENT
  POST
}

enum ArtifactType extends CollectionType {
  MESSAGE
  IMAGE
}

model User {
  id          String   @id @default(cuid())
  ownerId     String   @unique // References Owner.id (the user's personal Owner)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relationships
  owner      Owner @relation("UserOwner", fields: [ownerId], references: [id], onDelete: Cascade) // The unique, personal owner profile (the one referenced by ownerId - orgId is null)
  owners     Owner[] @relation("UserOwners")  // All Owners this user has (personal + org-based) - inverse of Owner.user
  adminOf        Org[]
  orgMemberships Org[]
  following   Follow[] @relation("Following")   // Outgoing: I follow others
  followers   Follow[] @relation("Followers")  // Incoming: others follow me

  email        String   @unique
  passwordHash String
  username     String   @unique

  firstName    String?
  middleName   String?
  lastName     String?
  displayName  String?  // Preferred display name (overrides firstName + lastName)

  // Profile
  headline     String?
  bio          String?
  interests    String[] @default([])
  location     String?
  isPublic     Boolean  @default(true)
  avatarImageId String?
  avatarImage   Image?  @relation("UserAvatar", fields: [avatarImageId], references: [id], onDelete: SetNull)

  @@map("users")
}

model Follow {
  id            String   @id @default(cuid())
  followerType  OwnerType
  followerId    String
  followingType OwnerType
  followingId   String
  createdAt     DateTime @default(now())

  userFollower  User? @relation("Following", references: [id], onDelete: Cascade)
  userFollowing User? @relation("Followers", references: [id], onDelete: Cascade)
  orgFollower   Org? @relation("Following", references: [id], onDelete: Cascade)
  orgFollowing  Org? @relation("Followers", references: [id], onDelete: Cascade)

  @@unique([, followingId])
  @@index([followingId])
  @@map("follows")
}

// ========================
// Owners + Orgs
// ========================

// Note: Each User and User + Org combo has a unique Owner identity, with the User-first attribution pattern

model Owner {
  id        String    @id @default(cuid())
  isOrg     Boolean   @default(false)
  userId    String    // References User.id
  orgId     String?   // References Org.id (null for personal Owner)
  type      OwnerType
  createdAt DateTime  @default(now())

  // Relations
  user      User @relation("UserOwners", fields: [userId], references: [id], onDelete: Cascade)
  org       Org? @relation("OrgOwners", fields: [orgId], references: [id], onDelete: Cascade)

  // Ownership
  projects         Project[]
  events           Event[]
  posts            Post[]
  images           Image[] // uploaded files (metadata)
  
  // Messaging
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")

  status           OwnerStatus @default(ACTIVE)

  @@unique([userId, orgId]) // Allows one personal Owner (orgId=null) + multiple org Owners per user
  @@map("owners")
}

model Org {
  id        String   @id @default(cuid())
  createdByUserId   String   

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  slug      String   @unique

  headline  String?
  bio       String?
  interests String[] @default([])
  location  String?
  isPublic  Boolean  @default(true)

  // Address fields
  addressLine1 String?
  addressLine2 String?
  city         String?
  state        String?
  zip          String?

  // Parent Topic (placeholder using simple string for now)
  parentTopic  String?
  topics       Topic[]
  tags         String[] @default([])

  avatarImageId String?
  avatarImage   Image?  @relation("OrgAvatar", fields: [avatarImageId], references: [id], onDelete: SetNull)
  
  // Relationships
  owner         Owner @relation(fields: [owner], references: [id], onDelete: Cascade) // owner has superadmin role for Org
  owners        Owner[] @relation("OrgOwners")   // All Owners for this org (users acting on behalf of this org) - inverse of Owner.org
  following     Follow[] @relation("Following")   // Outgoing: I follow others
  followers     Follow[] @relation("Followers")   // Incoming: others follow me
  members       OrgMember[]

  @@map("orgs")
}

model OrgMember {
  id        String   @id @default(cuid())
  userId    String
  role      OrgRole  @default(MEMBER)
  createdAt DateTime @default(now())

  user      User @relation("UserOwners", fields: [userId], references: [id], onDelete: Cascade)
  org        Org @relative(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([orgId, ownerId])
  @@index([orgId, role])
  @@map("org_members")
}

// ========================
// Content attributed to an Owner (User or Org Admin)
// ========================

model Project {
  id           String   @id @default(cuid())
  userId       String
  createdByOrg Boolean  @ default(false)
  orgId        String?
  title        String
  description  String
 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  owner        Owner @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  updates Post[]
  tags         String[] @default([])
  topics       String[] @default([])
  @@index([userId])
  @@map("projects")
}

model Event {
  id           String   @id @default(cuid())
  userId       String
  createdByOrg Boolean  @ default(false)
  orgId        String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  title        String
  description  String
  dateTime     DateTime
  location     String
  latitude     Float?
  longitude    Float?

  tags         String[] @default([])
  topics       String[] @default([])

  owner        Owner @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  updates Post[]

  @@index([userId, dateTime])
  @@map("events")
}

// Standalone posts (no projectId/eventId) and descendant posts (exactly one parent)
// Note: enforce "projectId and eventId not both set" via app logic + a DB CHECK constraint in migration.

model Post {
  id           String   @id @default(cuid())
  userId       String
  createdByOrg Boolean  @ default(false)
  orgId        String?

  // Parent pointers (optional)
  parentType   CollectionType
  eventId      String?

  title        String?
  content      String

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  owner        Owner @relation(fields: [owner], references: [id], onDelete: Cascade)
  project      Project? @relation(fields: [projectId], references: [id], onDelete: Cascade)
  event        Event?   @relation(fields: [eventId], references: [id], onDelete: Cascade)

  tags         String[] @default([])
  topics       String[] @default([])

  @@index([ownerId, createdAt])
  @@index([projectId, createdAt])
  @@index([eventId, createdAt])
  @@map("posts")
}

// ========================
// Messaging
// ========================

model Message {
  id           String    @id @default(cuid())
  content      String
  senderId     String    // References Owner.id (Owner.type determines if User or Org)
  receiverId   String    // References Owner.id (Owner.type determines if User or Org)
  sentByOrg     Boolean @defaul(false)
  senderOrgId   String?   // Denormalized: set when sender is an org (for efficient org message queries)
  receiverOrgId String?   // Denormalized: set when receiver is an org (for efficient org message queries)
  createdAt     DateTime  @default(now())
  readAt        DateTime?

  sender       Owner     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver     Owner     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([senderId])
  @@index([receiverId])
  @@index([senderOrgId])
  @@index([receiverOrgId])
  @@map("messages")
}

// ========================
// Images + Attachments
// ========================

model Image {
  id           String   @id @default(cuid())
  url          String
  path         String
  altText      String?
  uploadedById String
  createdAt    DateTime @default(now())

  uploadedBy   Owner @relation(fields: [owner], references: [id], onDelete: Cascade)

  // Used for Project/Event/Post galleries (and any other attachable targets you add later)
  attachments  ImageAttachment[]

  // Backrefs for avatars
  userAvatarFor User[] @relation("UserAvatar")
  orgAvatarFor  Org[]  @relation("OrgAvatar")

  @@index([uploadedById])
  @@map("images")
}

model ImageAttachment {
  id        String         @id @default(cuid())
  imageId   String
  type      ArtifactType
  targetId  String
  sortOrder Int            @default(0)
  createdAt DateTime       @default(now())

  image     Image @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@index([type, targetId])
  @@index([imageId])
  @@map("image_attachments")
}

model Topic {
	id          String
	label       String;
	parentId?   String;
	synonyms?   String[];
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
